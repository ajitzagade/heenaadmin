<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="@color/beig"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp">

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/tv_employee_picture"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:padding="0dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_employee_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_employee_name"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="72dp"
                android:layout_marginRight="16dp"
                android:ellipsize="marquee"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="Content"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_employee_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_alignTop="@+id/tv_employee_picture"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="72dp"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:text="Username"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_employee_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_employee_name"
                android:layout_alignEnd="@+id/tv_employee_content"
                android:layout_alignRight="@+id/tv_employee_content"
                android:text="ID"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
